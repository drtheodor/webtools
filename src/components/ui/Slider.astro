---
import type { CompVariant } from '@/lib/comps';

type Props = {
  min?: number;
  max?: number;
  value?: number;
  class?: string;
  variant?: CompVariant;
  [key: string]: any;
};

const { 
  min = 0, 
  max = 100, 
  value = 50, 
  variant = '',
  class: className = '', 
  ...attrs 
}: Props = Astro.props;
---

<input type="range" min={min} max={max} value={value} class:list={["range", "range-" + variant, className]} {...attrs} />